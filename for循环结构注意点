#include<iostream>
using namespace std;
//总结: 在第一个分号左边 用int赋值 是相当于赋予一个常数 而非一个变量
//		  在第二个分号左边 赋予的是一个动态的变量 
//		  而第三个分号一般我们是用来作迭代用的 
//		  所以在使用循环时 应当保证第二个分号左边的和第三个分号左边的变量都有考虑进去
//		  否则会影响我们的循环 造成超乎我们预计N倍的迭代

int main()
{
	
	//错误 第一个分号左侧 是相当于赋予一个常数
	int n = 10;
	for (int i = n; i > 0;)
	{
		cout << i << endl;
		n--;
	}

	/* //正确 第二个分号左侧 是一个变量
	int i = 5;
	for (; i > 0;)
	{

		i = n;
		cout << i << endl;
		n--;
	}*/
	
	/* //注意条件变量变化会随迭代影响 ; 防止 第二个 第三个分号中的条件相互影响
	int b = 10;
	for (int i = 0; i < b; i++)
	{
		b--;
		//cout << "b:" << b << endl;
		cout << i << endl;
	}
	*/


	return 0;
}
